<div class="container" style="margin-top: 60px">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <%- partial('sidebar.ejs')%>
        </div>
        <div style="position:absolute;left: 300px;right: 50px;">
            <h1 class="page-header">Manage Diseases</h1>
            <% if (diseases.length > 0) { %>
            <div class="row">
                <div class="panel panel-primary filterable">
                    <div class="panel-heading">
                        <h1 class="panel-title">Diseases</h1>
                        <div class="pull-right">
                            <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                            <tr class="filters">
                                <th><input type="text"
                                           class="form-control"
                                           placeholder="#"
                                           disabled></th>
                                <th><input type="text"
                                           class="form-control"
                                           placeholder="Name"
                                           disabled></th>
                                <th><input type="text"
                                           class="form-control"
                                           placeholder="Code"
                                           disabled></th>
                                <th><input type="text"
                                           class="form-control"
                                           placeholder="Symptoms"
                                           disabled></th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i = 0; i < diseases.length; i++) { %>
                            <tr>
                                <td><%= diseases[i].id %></td>
                                <td><%= diseases[i].name %></td>
                                <td><%= diseases[i].code %></td>
                                <td>
                                    <ul>
                                        <li>Fever</li>
                                    </ul>
                                </td>
                                <td width="10%">
                                    <a href="diseases/edit/<%= diseases[i].id %>"
                                       class="btn btn-info btn-xs">Edit</a>
                                    <a href="diseases/delete/<%= diseases[i].id %>"
                                       class="btn btn-danger btn-xs">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% } else { %>
            <div class="row">
                <div class="alert alert-info"
                     role="alert"><strong>Data is empty.</strong> Add a disease below.</div>
            </div>
            <%}%>
            <% if (flash && flash.status) { %>
            <div class="row">
                <div class="alert alert-info alert-dismissible"
                     role="alert">
                    <button type="button"
                            class="close"
                            data-dismiss="alert"
                            aria-label="Close"><span aria-hidden="true">&times;</span></button><%= flash.message %></div>
            </div>
            <% } %>
            <% if (flash && flash.error) { %>
            <div class="row">
                <div class="alert alert-warning alert-dismissible"
                     role="alert">
                    <button type="button"
                            class="close"
                            data-dismiss="alert"
                            aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Warning!</strong> <%= flash.message %>
                </div>
            </div>
            <% } %>
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h1 class="panel-title">Add Disease</h1>
                    </div>
                    <div class="panel-body">
                        <form action="/diseases/create"
                              method="post">
                            <input type="hidden"
                                   name="client"
                                   value="dashboard">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label for="disease_name">Name</label>
                                        <input type="text"
                                               name="name"
                                               class="form-control"
                                               id="disease_name"
                                               placeholder="Disease Name">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="disease_cid">CID</label>
                                        <input type="text"
                                               name="code"
                                               class="form-control"
                                               id="disease_cid"
                                               placeholder="Disease Code">
                                        <p class="help-block">This should be an ICD-10 code, but any unique code is accepted</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <button type="submit"
                                                class="btn btn-success btn-lg btn-block">Save</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>